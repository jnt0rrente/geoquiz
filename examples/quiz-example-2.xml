<?xml version="1.0" encoding="UTF-8" ?>

<forml>
    <header>
        <title>Second Quiz</title>
        <description>Again, this is an example. You can upload this on the GeoQuiz site.</description>
    </header>
    <body>
        <question text="What is truth?" accepted="d">
            <option text="!True"/>
            <option text="!(!False)"/>
            <option text="True && False"/>
            <option text="Rocks"/>
        </question>
        <question text="¿Is this the text for question 2?" accepted="b">
            <option text="Nope"/>
            <option text="Yea"/>
            <option text="Nah"/>
            <option text="Maybe"/>
        </question>
        <question text="What is the burning point of crude oil?" accepted="a">
            <option text="220 ºC"/>
            <option text="200 ºC"/>
            <option text="135 ºC"/>
            <option text="350 ºC"/>
        </question>
        <question text="How many rocks are there?" accepted="d">
            <option text="3213"/>
            <option text="45435"/>
            <option text="5213"/>
            <option text="More than 6"/>
        </question>
        <question text="What date do the first metal tools date from?" accepted="b">
            <option text="0 AD"/>
            <option text="2 AD"/>
            <option text="135 BC"/>
            <option text="90 BC"/>
        </question>
        <question text="Is it true that diamonds can be produced from coal?" accepted="c">
            <option text="No"/>
            <option text="Yes"/>
            <option text="Very No"/>
            <option text="Yes twice"/>
        </question>
    </body>
</forml>